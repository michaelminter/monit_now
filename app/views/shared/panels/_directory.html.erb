<div class="col-lg-4">
  <div data-toggle="play-animation" data-play="fadeInDown" data-offset="0" data-delay="1500" class="panel widget anim-running anim-done" style="">
    <div class="panel-body bg-<%= panel_color(service.current_event) %>">
      <div class="row row-table row-flush">
        <div class="col-xs-8">
          <p class="mb0">DIRECTORY</p>
          <h3 class="m0"><%= service.name -%></h3>
        </div>
        <div class="col-xs-4 text-center">
          <em class="fa fa-folder-o fa-2x"></em>
        </div>
      </div>
    </div>
    <div class="panel-body">
      <!-- Bar chart-->
      <div class="text-center">
        <div data-bar-color="<%= panel_color(service.current_event) %>" data-zero-color="#CCCCCC" data-null-color="#FFFFFF" data-height="30" data-bar-width="6" data-bar-spacing="6" class="inlinesparkline inline"><%= service.events.order_by(:created_at.desc).limit(34).map{|e| e[:status].to_i unless e[:status].nil?}.compact.join(',') -%></div>
      </div>
    </div>
    <div class="panel-footer"><i class="fa fa-star-o add-favorite"></i><span class="pull-right"><button data-toggle="modal" data-target="#modal-<%= service.id -%>" style="background:none;border:none;padding:0;">See more &nbsp; <i class="fa fa-external-link"></i></button></span></div>
  </div>
</div>

<div id="modal-<%= service.id -%>" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true" class="modal fade">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" data-dismiss="modal" aria-hidden="true" class="close">Ã—</button>
        <h4 id="myModalLabel" class="modal-title"><%= service.name -%></h4>
      </div>
      <div class="modal-body"><%= service.inspect -%></div>
      <div class="modal-footer">
        <button type="button" data-dismiss="modal" class="btn btn-default">Close</button>
        <!--button type="button" class="btn btn-primary">Save changes</button-->
      </div>
    </div>
  </div>
</div>

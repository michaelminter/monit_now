<div id="<%= service.id -%>" class="panel panel-success" data-id="<%= service.id -%>">
  <div class="panel-heading portlet-handler">
    <div class="row row-table row-flush">
      <div class="col-xs-8">
        <p class="mb0">FILESYSTEM</p>
        <h3 class="m0"><%= service.name -%></h3>
      </div>
      <div class="col-xs-4 text-center">
        <em class="fa fa-files-o fa-2x"></em>
      </div>
    </div>
  </div>
  <div class="panel-body">
    <!-- Bar chart-->
    <div class="text-center">
      <div data-stacked-bar-color="#6AB550,#4B7F38" data-zero-color="#CCCCCC" data-null-color="#FFFFFF" data-height="30" data-bar-width="6" data-bar-spacing="6" class="inlinesparkline inline"><%= service.events.order_by(:created_at.desc).limit(34).map{|e| "#{e[:block]['percent'].to_f unless e[:block].nil?}:#{e[:inode]['percent'].to_f unless e[:inode].nil?}" unless e[:block].nil? && e[:inode].nil?}.compact.join(',') -%></div>
    </div>
  </div>
  <div class="panel-footer"><i class="fa fa-star-o add-favorite"></i><span class="pull-right">See more &nbsp; <i class="fa fa-external-link"></i></span></div>
</div>

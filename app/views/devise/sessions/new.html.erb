<!-- START panel-->
<div data-toggle="play-animation" data-play="fadeIn" data-offset="0" class="panel panel-dark panel-flat">
  <div class="panel-heading text-center">
    <a href="#">
      <img src="<%= image_url 'admin/logo.png' -%>" alt="Image" class="block-center img-rounded">
    </a>
    <p class="text-center mt-lg">
      <strong>SIGN IN TO CONTINUE.</strong>
    </p>
  </div>
  <div class="panel-body">
    <%= form_for(resource, as: resource_name, html: { class: 'mb-lg', role: 'form' }, url: session_path(resource_name)) do |f| %>
      <div class="text-right mb-sm"><a href="/register" class="text-muted">Need to Signup?</a>
      </div>
      <div class="form-group has-feedback">
        <%= f.email_field :email, placeholder: 'Email', class: 'form-control', autofocus: true -%>
        <span class="fa fa-envelope form-control-feedback text-muted"></span>
      </div>
      <div class="form-group has-feedback">
        <%= f.password_field :password, placeholder: 'Password', class: 'form-control' -%>
        <span class="fa fa-lock form-control-feedback text-muted"></span>
      </div>
      <div class="clearfix">
        <div class="checkbox c-checkbox pull-left mt0">
          <label>
            <%= f.check_box :remember_me %>
            <span class="fa fa-check"></span>Remember Me</label>
        </div>
        <div class="pull-right"><a href="/forgot_password" class="text-muted">Forgot your password?</a>
        </div>
      </div>
      <%= f.submit 'Login', class: 'btn btn-block btn-success' %>
    <% end %>
  </div>
</div>
<!-- END panel-->

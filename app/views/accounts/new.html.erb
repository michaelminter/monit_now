<%= simple_form_for( @account, html: { id: 'payment-form' } ) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">

    <div class="field">
      <select name="account_type_id">
        <% AccountType.all.each do |type| %>
        <option value="<%= type.id -%>"><%= type.name -%></option>
        <% end %>
      </select>
    </div>

    <%= f.label :name, 'Account Name' -%>
    <%= f.input_field :name -%>

    <%= f.simple_fields_for :user do |u| %>
      <%= u.error_notification %>

      <div class="field">
        <%= u.label :full_name %>
        <%= u.error :full_name %><br />
        <%= u.input_field :full_name %>
      </div>

      <div class="field">
        <%= u.label :email %>
        <%= u.error :email %><br />
        <%= u.email_field :email %>
      </div>

      <div class="field">
        <%= u.label :password %>
        <%= u.error :password %><br />
        <%= u.password_field :password %>
      </div>

      <div class="field">
        <%= u.label :password_confirmation %>
        <%= u.error :password_confirmation %><br />
        <%= u.password_field :password_confirmation %>
      </div>
    <% end %>

    <span class="payment-errors"></span>

    <div class="form-row">
      <label>
        <span>Card Number</span>
        <input type="text" size="20" data-stripe="number"/>
      </label>
    </div>

    <div class="form-row">
      <label>
        <span>CVC</span>
        <input type="text" size="4" data-stripe="cvc"/>
      </label>
    </div>

    <div class="form-row">
      <label>
        <span>Expiration (MM/YYYY)</span>
        <input type="text" size="2" data-stripe="exp-month"/>
      </label>
      <span> / </span>
      <input type="text" size="4" data-stripe="exp-year"/>
    </div>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>

<% end %>

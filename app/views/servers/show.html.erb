<div class="main-content">
  <h3><%= @server.localhost_name %>
    <br>
    <small>IP: <%= @server.ip %> UPTIME: <%= @server.uptime -%> seconds CPU: <%= @server.cpu -%> MEM:<%= @server.memory.to_i > 1000000 ? (@server.memory.to_i / 1000000).to_s + ' GB' : @server.memory.to_s + ' MB' -%></small>
  </h3>
  <div class="row">

    <% @services.each do |service| %>
      <% case service.type.to_i %>
        <% when 3 %>
          <%= render :partial => 'shared/panels/process', locals: { service: service } %>
        <% when 5 %>
          <%= render :partial => 'shared/panels/system', locals: { service: service } %>
        <% else %>
          <% # err %>
      <% end %>
    <% end %>

  </div>
</div>
